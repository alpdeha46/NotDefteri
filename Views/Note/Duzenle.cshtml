@model NotDefteri.Models.Not

<style>
.card {
    background: #fff;
    color: #000;
    border-radius: 15px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
}

.card h3 {
    margin-bottom: 20px;
}

/* Input ve textarea çerçeveleri */
.form-control {
    border: 2px solid #000; /* Siyah çizgi */
    border-radius: 8px;
    background-color: #fff;
    color: #000;
    transition: border-color 0.2s;
}

.form-control:focus {
    border-color: #0d6efd; /* Mavi focus */
    box-shadow: 0 0 5px rgba(13,110,253,0.5);
    outline: none;
}

/* Dark Mode destek */
body.dark-mode .card {
    background: #222;
    color: #fff;
}

body.dark-mode .form-control {
    background: #111;
    color: #fff;
    border: 2px solid #fff;
}

body.dark-mode .form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 5px rgba(13,110,253,0.5);
}
</style>

<div class="card shadow p-4">
    <h3 class="mb-3">Notu Düzenle</h3>

    <form asp-action="Duzenle" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <input asp-for="Baslik" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">İçerik</label>
            <textarea asp-for="Icerik" class="form-control" rows="5"></textarea>
        </div>

        <button type="submit" class="btn btn-success">Güncelle</button>
    </form>
</div>