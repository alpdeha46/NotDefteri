@model List<NotDefteri.Models.Not>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
body {
    background:#111; /* Sayfa arka planı siyah */
    color:#000;
    font-family: Arial, sans-serif;
    padding: 20px;
}

.card {
    background:#fff; /* Kartlar beyaz */
    color:#000;      /* Kart içi yazılar siyah */
    border-radius:15px;
    box-shadow:0 8px 20px rgba(0,0,0,0.2);
}

.card h4 {
    margin-top:0;
}

.btn-add {
    margin-bottom:20px;
    background:#28a745;
    border:none;
    color:white;
}
</style>

<div class="container">

    <h2 class="text-white">📘Not Defteri</h2>
<br>
    <a asp-action="Ekle" class="btn btn-add">Yeni Not Ekle</a>

    <hr class="text-white" />

    @if (Model.Count == 0)
    {
        <p class="text-white">Not bulunmuyor.</p>
    }
    else
    {
        <div class="row g-4">
            @foreach (var not in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card p-3 h-100 d-flex flex-column justify-content-between">
                        <div>
                            <h4>@not.Baslik</h4>
                            <p class="text-muted small">📅 @not.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</p>
                            <p>@not.Icerik</p>
                        </div>
                        <div class="mt-3 d-flex justify-content-between">
                            <a asp-action="Duzenle" asp-route-id="@not.Id" class="btn btn-primary btn-sm">Düzenle</a>
                            <a asp-action="Sil" asp-route-id="@not.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istiyor musun?');">Sil</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>