@model NotDefteri.Models.Resim
@{
    ViewData["Title"] = "Resmi Düzenle";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2>✏ Resmi Düzenle</h2>

    <form asp-action="Duzenle" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Resim Adı</label>
            <input asp-for="Ad" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Yeni Resim Dosyası (opsiyonel)</label>
            <input type="file" name="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </form>
</div>